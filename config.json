{
  "styles": {
    "panel": [
      "font-family: Hack;",
      "font-weight: normal;",
      "font-size: 20px;",
      "text-shadow: none;",
      "background-color: #261d18;",
      "border: 10px solid #261d18;"
    ],
    "block": [
      "padding-top: 5px;",
      "padding-bottom: 5px;",
      "padding-left: 10px;",
      "padding-right: 10px;",
      "color: #b39a8f;"
    ],
    "power-off-icon": [
      "font-family: \"Font Awesome\"",
      "background-color: #3b2d26;"
    ],
    "battery-icon": [
      "font-family: \"Font Awesome\"",
      "background-color: #3b2d26;"
    ],
    "battery": [
      "background-color: #30251f;",
      "margin-right: 10px;"
    ],
    "wireless-icon": [
      "font-family: \"Font Awesome\"",
      "background-color: #3b2d26;"
    ],
    "wireless": [
      "background-color: #30251f;",
      "margin-right: 10px;"
    ],
    "date": [
      "background-color: #30251f;",
      "margin-right: 10px;"
    ],
    "time": [
      "background-color: #c77e64;",
      "color: #261d18;",
      "margin-right: 0px;"
    ]
  },
  "blocks": {
    "left": [
      {
        "name": "power-off-icon",
        "text": "",
        "click_command": "systemctl poweroff"
      }
    ],
    "center": [
      {
        "name": "title",
        "text": "Welcome to vbar"
      }
    ],
    "right": [
      {
        "name": "battery-icon",
        "text": ""
      },
      {
        "name": "battery",
        "command": "acpi | cut -d, -f2 | sed 's/ //'",
        "interval": 1
      },
      {
        "name": "wireless-icon",
        "text": ""
      },
      {
        "name": "wireless",
        "command": "netctl-auto list | grep '* ' | sed 's/* //'",
        "interval": 5
      },
      {
        "name": "date",
        "command": "date +%d/%m",
        "interval": 60
      },
      {
        "name": "time",
        "command": "date +%H:%M",
        "interval": 1
      }
    ]
  }
}
